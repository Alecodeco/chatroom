<% userStatusIcon = "orange" if @user.status == "Online" %>
<% userStatusIcon = "times" if @user.status == "Busy" %>
<% userStatusIcon = "outline" if @user.status == "Away" %>
<h2 class="ui center aligned tiny icon header <%='inverted' if night_mode?%>">
  <i class="user <%= userStatusIcon %> icon" ></i>
  Currently: <%= @user.status %>
</h2>

<div class="ui container" align="center">
  <div class="ui raised card">
    <div class="ui segment <%='inverted' if night_mode?%>">
      <div class="avatar-image">
        <!---  AVATAR HERE  -->
      </div>
      <div class="ui padded segment <%='inverted' if night_mode?%>">
        <a class="ui header <%='inverted' if night_mode?%>"><%= @user.username %></a>
        <div class="meta">
          <span class="date"></span>
        </div>
        <div class="description">
          <%= @user.description %>
        </div>
      </div>
      <div class="extra content">
        <a>
          <i class="calendar alternate outline icon"></i>
          <small>Member since: <%= @user.created_at.strftime("%B %Y") %></small>
        </a>
      </div>
    </div>
  </div>
  <% if current_user == @user %>
  <a href="<%= edit_user_path(@user) %>">
    <i class="edit icon"></i>
    Edit Profile
  </a>

  </div>

  <br>
  <div class="ui container">
    <div class="ui divider"></div>
  </div>
  <br>

  <div class="ui container" align="center">
    <div class="ui segment <%='inverted' if night_mode?%>">
      <div class="ui header">
        Choose an avatar:
      </div>
      <div class="ui padded centered grid">
        <div class="ui cards">

          <div class="ui red raised card">
            <div class="content">
              <div class="ui four column grid">

              </div>
            </div>
            <div class="extra content">
              <p>LEGOS</p>
            </div>
          </div>

          <div class="ui blue raised card">
            <div class="content">
              <div class="ui four column grid">

              </div>
            </div>
            <div class="extra content">
              <p>PEOPLE</p>
            </div>
          </div>

        </div>
      </div>

      <div class="ui extra content segment <%='inverted' if night_mode?%>">
        <p>'LEGOS'
          Icons made by <a href="https://www.flaticon.com/authors/smashicons" title="Smashicons">
            Smashicons</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
          </p>

          <p>'PEOPLE'
            Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a>
            from <a href="https://www.flaticon.com/" title="Flaticon"> www.flaticon.com</a>
          </p>
        </div>
      </div>
    </div>
  <% end %>

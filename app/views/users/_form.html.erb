<div class="ui form">
  <%= form_for @user do |f| %>
    <div class="required field">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder:'Enter username', autofocus:"true" %>
    </div>
    <div class="required field">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder:"Enter password" %>
    </div>
    <div class="required field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder:"Re-enter password" %>
    </div>
    <br>
    <%= f.submit "Signup", class:"ui orange button" %>
  <% end %>
  <br>
  <%= link_to "Cancel and return", login_path %>
</div>

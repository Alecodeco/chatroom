<h2 id="chatroom-icon-header" class="ui center aligned medium icon <%="inverted" if current_user.has_dark_active?%> header">
  <i class="circular orange comments outline icon"></i>
  Chatroom
</h2>

<div class="ui centered <%='inverted' if current_user.has_dark_active?%> grid">

  <%= render 'chatroom/left_button_menu' %>

  <div class="ui nine wide column">
    <div class="ui fluid raised card">
      <div id="message-container" style=<%="background-color:black" if current_user.has_dark_active?%> >
        <%= render @messages %>
      </div>
      <div class="extra content" style=<%="background-color:black" if current_user.has_dark_active?%>>
        <%= form_with model:@message, method:"create", url:message_path, id:"chat_form" do |f| %>
        <div class="ui small fluid action input">
          <%= f.text_field :body, autofocus: true, autocomplete: false,
                            placeholder:"Enter message here...", id:"chat_textfield" %>
          <%= f.submit "Send", class:"ui orange right labeled icon tiny button", id:"send_button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= render 'chatroom/right_menu_participants' %>

</div>

<h2 class="ui center aligned medium icon header">
  <i class="circular orange comment outline icon"></i>
  Chatroom
</h2>

<div class="ui stackable centered grid">

  <div class="ui three wide column">
    <div class="ui fluid raised card">
      <div class="content">
        <div class="ui inverted fluid vertical menu">
          <a class="orange item">Home</a>
          <a class="orange item">Messages</a>
          <a class="orange item">Friends</a>
        </div>
      </div>
    </div>
  </div>

  <div class="ui ten wide column ">
    <div class="ui fluid raised card">
      <div class="ui large feed" id="message-container">
        <%= render @messages %>
      </div>
          <div class="extra content">
            <%= form_for @message, method:"create", url:message_path, remote:true do |f| %>
            <div class="ui small fluid action input">
              <%= f.text_field :body, placeholder:"Your message here..." %>
              <%= f.submit "Send", class:"ui orange right labeled icon tiny button" %>
              <% end %>
            </div>
          </div>
    </div>
  </div>

  <div class="three wide column">
    <div class="ui fluid raised card">
      <div class="content">
        <div class="ui small feed">
          <h4 class="ui header">Participants</h4>
          <% @user.each do |user| %>
          <div class="event">
            <div class="content">
              <div class="summary">
                <%= link_to "#{user.username}", user_path(user.id)  %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="three wide column">
  <div class="ui fluid raised card">
    <div class="ui <%="inverted" if night_mode? %> segment">
      <div class="ui small <%="inverted" if night_mode? %> list">
        <h4 class="ui <%="inverted" if night_mode? %> header">Participants:</h4>
        <p class="ui divider"></p>
        <% @users.each do |user| %>
        <% unless user.status == "Offline" %>
        <div class="item" id="list-participant-others">
          <%= link_to "#{user.username}", user_path(user.id) if user != current_user %>
        </div>
        <% end %>
        <% end %>
        <div class="item" id="list-participant-user">
          <%= link_to "( You )", user_path(current_user.id) %>
        </div>
      </div>
    </div>
  </div>
</div>

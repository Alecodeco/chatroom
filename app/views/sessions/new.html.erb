<h2 class="ui center aligned icon header">
  <i class="users icon"></i>
  <div class="content">
    Please log in ...
    <div class="sub header">... or create a new account !</div>
  </div>
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed grid">
    <div class="column">
      <div class="ui form">
        <%= form_for :session do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder:"Enter username", autofocus:"true" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder:"Enter password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class:"ui orange submit button" %>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <%= link_to "Sign up", signup_path, class:"ui big blue button" %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>

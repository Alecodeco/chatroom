<div class="ui small inverted menu">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "item" %>
    <div class="right menu">
      <% if logged_in? %>
      <div class="active orange item">
        <strong><%= "#{current_user.username}" %></strong>
      </div>
      <div class="ui dropdown item">
        <%= link_to "Account", class:"item" %>
        <i class="dropdown icon"></i>
        <div class="menu">
            <%= link_to "Profile", user_path(current_user.id), class:"item" %>
            <%= link_to "Logout", logout_path, method: :delete, class:"item" %>
        </div>
      </div>
      <div class="item">
        <span id="current-status-nav"><%= "#{current_user.status}" %></span>
        <% if current_user.status != "Online" %>
        <i class="toggle off icon" id="nav-status-icon"></i>
        <% else %>
        <i class="toggle on icon" id="nav-status-icon"></i>
        <% end %>
      </div>
      <% elsif !logged_in? and !current_page?(login_path)%>
      <div class="item">
        <%= link_to "Log in", login_path, class: "ui primary button" %>
      </div>
      <% elsif !logged_in? and (!current_page?(login_path) and !current_page?(signup_path) ) %>
      <div class="item">
        <%= link_to "Signup", login_path, class: "ui orange button" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
